APP_NAME="NIMR Drive"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=log

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# LaCie Storage Configuration
# =============================================================================
# 
# Development (local storage):
#   LACIE_DRIVE_PATH=C:/xampp/htdocs/your-project/storage/app/lacie-dev
#
# Production - Windows (UNC path to SMB share):
#   LACIE_DRIVE_PATH=//10.0.10.6/nimr-storage
#
# Production - Linux (mounted SMB share):
#   LACIE_DRIVE_PATH=/mnt/nimr-storage
#
LACIE_DRIVE_PATH=storage/app/lacie-dev

# =============================================================================
# Active Directory / LDAP Configuration
# =============================================================================
LDAP_HOST=10.0.10.5
LDAP_PORT=389
LDAP_BASE_DN=dc=nimrhqs,dc=local
LDAP_ACCOUNT_SUFFIX=@nimrhqs.local

# Optional: Service account for user lookups (leave empty for user-bind auth)
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=

# Optional: Restrict login to specific AD groups (comma-separated DNs)
# Example: CN=Storage Users,OU=Groups,DC=nimrhqs,DC=local
LDAP_ALLOWED_GROUP_DNS=

# =============================================================================
# User Settings
# =============================================================================
# Default storage quota for new users (in GB)
DEFAULT_USER_QUOTA_GB=5
